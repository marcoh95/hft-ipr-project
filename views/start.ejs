<!DOCTYPE html>
<html lang="en">
    <head>
        <%- include ('head.ejs') %>
    </head>
    <body>
        <%- include('nav.ejs', { active: 'index' }) %>
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-xs-12 col-sm-8">
                    <h1>My Blog</h1>
                </div>
            </div>
            <div class="row justify-content-center">
                <div class="col justify-content-center">
                    <img class="slideshow" id="auslandssemester" name="auslandssemester" width="100%"
                        height="100%" src="public/auslandssemester.jpg">
                    <img class="slideshow" id="auslandssemester1" name="auslandssemester1" width="100%"
                        height="100%" src="public/auslandssemester1.jpg">
                    <img class="slideshow" id="auslandssemester2" name="auslandssemester2" width="100%"
                        height="100%" src="public/auslandssemester2.jpg">
                </div>
            </div>
        </div>
        <footer id="fussbereich">
            <%- include ('footer.ejs') %>
        </footer>
        
        <script>
            var myIndex = 0;
            slideshow();

            function slideshow() {
                var i;
                var x = document.getElementsByClassName("slideshow");
                for (i = 0; i < x.length; i++) {
                    x[i].style.display = "none";  
                }
                myIndex++;
                if (myIndex > x.length) {
                    myIndex = 1
                }    
                x[myIndex-1].style.display = "block";  
                setTimeout(slideshow, 3000);
            }
        </script>
    </body>
</html>
